@import url('https://fonts.googleapis.com/css2?family=Annie+Use+Your+Telescope&family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap');


/**********文章列表**********/
.article {
    margin: 30px auto 30px;
}

.article-item {
    border-bottom: 1px solid #f0f0f0;
    margin: 0 auto 20px;
    padding-bottom: 15px;
    font-family: "Annie Use Your Telescope", cursive;
}

.article-item a {
    font-size:30px;
    font-weight:700;
    line-height:1.5;
}

.article-item a:link {
    color: #333333;
}

.article-item a:hover {
    text-decoration: underline;
}

.article-item a:visited {
    color: #000;
}

.article-item-content p {
    color: #000;
    font-size: 14px;
    line-height: 25px;
    margin: 0 auto 8px;
    font-family: "Montserrat", sans-serif;
}

.atricle-item-time span {
    color: #b4b4b4;
    font-size: 12px;
    line-height: 20px;
}